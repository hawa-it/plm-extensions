            span.indent-3     homeButton            : true,
            span.indent-3     toggleItemAttachments : true,
            span.indent-3     toggleItemDetails     : true,
            span.indent-3     ..
            span.indent-3     enableCustomRequests     : true
            span.indent-2 },
            span.indent-2 products : {
            span.indent-3     workspaceId            : 95,
            span.indent-3     icon : 'icon-product',
            span.indent-3     headerLabel     : 'Serviceable Products',
            span.indent-3     ..
            span.indent-3     filter     : [..]
            span.indent-2 },
            span.indent-2 items : {
            span.indent-3     bmoViewName            : 'Service',
            span.indent-3     bomRevisionBias : 'release',
            span.indent-3     fieldIdImage     : 'IMAGE',
            span.indent-3     ..
            span.indent-3     sparePartTileDetails     : ['MATERIAL', 'ITEM_WEIGHT', 'DIMENSIONS']
            span.indent-2 },
            span.indent-2 problemReports : {
            span.indent-3     workspaceId            : 82,
            span.indent-3     fieldIdImage : 'IMAGE_1',
            span.indent-2 },
            span.indent-2 sparePartsRequests : {
            span.indent-3     workspaceId            : 241,
            span.indent-3     sectionsExpanded : [ 'Requestor Contact Details', 'Request Details' ],
            span.indent-3     sectionsExcluded     : [ 'Planning &amp; Tracking', 'Request Confirmation', 'Quote Submission &amp; Response', 'Real Time KPIs', 'Workflow Activity', 'Quote Summary', 'Order Processing', 'Related Processes' ],
            span.indent-3     gridColumnsExcluded     : [ 'Line Item Cost', 'Availability [%]', 'Manufacturer', 'Manufacturer P/N', 'Unit Cost', 'Total Cost', 'Make or Buy', 'Lead Time (w)', 'Long Lead Time']
            span.indent-2 },
            span.indent-2 viewerFeatures : {
            span.indent-3 contextMenu   : false,
            span.indent-3 cube          : false,
            span.indent-3 orbit         : false,
            span.indent-3 ..
            span.indent-3 selectFile    : true
